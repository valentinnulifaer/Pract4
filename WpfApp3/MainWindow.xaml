        <TextBox x:Name ="NameTcx" HorizontalAlignment="Left" Height="30" Margin="333,235,0,0" TextWrapping="Wrap" Text="Введите имя" VerticalAlignment="Top" Width="142"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="14" Margin="404,203,0,0" VerticalAlignment="Top" Width="45"/>
        <Button Content="Удаление данных" HorizontalAlignment="Center" Height="21" Margin="0,325,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click_1"/>
        <Button Content="Изменение данных" HorizontalAlignment="Center" Height="27" Margin="0,351,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click_3"/>
    </Grid>
</Window>
